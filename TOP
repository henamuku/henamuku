  <section id="name-conversion">
    <h2>名前変換</h2>
    <input type="text" id="userName" placeholder="名前を入力">
    <button onclick="convertName()">変換</button>

  <section id="novel-links">
    <ul>
      <li><a href="novel1.html">小説1</a></li>
      <li><a href="novel2.html">小説2</a></li>
      <!-- ここに小説ページのリンクを増やせます -->
    </ul>
  </section>

  <script>
    function convertName() {
      const input = document.getElementById('userName').value;
      if(input.trim() === "") {
        document.getElementById('convertedName').textContent = "名前を入力してね";
        return;
      }
      // ここで変換ロジックを追加可能
      const converted = input.replace(/♡/g, '♡'); // 現状は入力そのまま表示
      document.getElementById('convertedName').textContent = converted;
    }
  </script>
